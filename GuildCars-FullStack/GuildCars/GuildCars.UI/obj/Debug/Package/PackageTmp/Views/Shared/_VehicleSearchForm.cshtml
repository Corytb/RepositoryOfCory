<style>
    .dropdownYear {
        width: 95px;
        margin-right: 15px;
        margin-top: 15px;
    }
    .dropdownPrice {
        width: 95px;
        margin-right: 15px;
        margin-top: 15px;
    }
</style>


<div class="row" style="border: solid; margin-bottom: 50px">
    <div class="col-lg-12 col-md-12 col-xs-12">
        <form class="form-inline">
            <div>
                <p style="margin-top: 10px"><strong>Quick Search</strong></p>
            </div>
            <div class="form-group col-lg-4 col-md-4 col-xs-8">
                <input type="text" class="form-control" id="generalSearchParam" placeholder="Enter make, model, or year" style="width: 300px; margin-top: 15px">
            </div>

            <div class="col-lg-4 col-md-4 col-xs-6" id="searchFormPrice">
                <label for="searchFormPrice">Price</label>
                <div id="searchFormPrice" class="form-group">
                    <select class="dropdownPrice form-control" id="minPrice"></select>
                    <select class="dropdownPrice form-control" id="maxPrice"></select>
                </div>
            </div>

            <div class="col-lg-4 col-md-4 col-xs-6" id="searchFormYear">
                <label for="searchFormYear">Year</label>
                <div id="searchFormYear" class="form-group">
                    <select class="dropdownYear form-control" id="minYear"></select>               
                    <select class="dropdownYear form-control" id="maxYear"></select>
                </div>
            </div>
        </form>
        <button type="submit" onclick="search()" class="btn btn-primary col-lg-3 col-md-4 col-xs-3" style="margin-top:15px; margin-bottom:15px; margin-left:37%">Search</button>
    </div>
</div>


<script>


    //gets value for minYear options
    var currentYear = new Date().getFullYear()
    max = currentYear + 1
    var options = "<option>No Min</option>";
    for (var year = 2000; year <= max; year++) {
        options += "<option>" + year + "</option>";
    }
    document.getElementById("minYear").innerHTML = options;

    //gets value for maxYear options
    var currentYear = new Date().getFullYear()
    max = currentYear + 1
    var options = "<option>No Max</option>";
    for (var year = 2000; year <= max; year++) {
        options += "<option>" + year + "</option>";
    }
    document.getElementById("maxYear").innerHTML = options;

    ////gets value for minPrice options
    var max = 500000
    var options = "<option>No Min</option>";
    for (var price = 25000; price <= max; price += 25000) {
        let currencyFormatter = new Intl.NumberFormat('en-US', {
            style: 'currency', currency: 'USD',
            minimumFractionDigits: 0,
            maximumFractionDigits: 0});
        let formattedMinPrice = currencyFormatter.format(price);
        options += "<option value=" + price + ">" + formattedMinPrice + "</option>";
    }
    document.getElementById("minPrice").innerHTML = options;

    //gets value for minprice options
    var max = 500000
    var options = "<option>No Max</option>";
    for (var price = 25000; price <= max; price += 25000) {
        let currencyFormatter = new Intl.NumberFormat('en-US', {
            style: 'currency', currency: 'USD',
            minimumFractionDigits: 0,
            maximumFractionDigits: 0 });
        let formattedMinPrice = currencyFormatter.format(price);
        options += "<option value=" + price + ">" + formattedMinPrice + "</option>";
    }
    document.getElementById("maxPrice").innerHTML = options;



</script>