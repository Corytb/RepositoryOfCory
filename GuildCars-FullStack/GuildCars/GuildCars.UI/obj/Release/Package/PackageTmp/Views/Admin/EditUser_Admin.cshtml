@model GuildCars.UI.Models.UserEditViewModel
@{
    ViewBag.Title = "EditUser_Admin";
}


<div class="row">
    <div class="col-lg-12">
        <h2>Edit User</h2>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <p class="alert alert-success" id="successMessage">@TempData["Success"]</p>
}

@using (Html.BeginForm("EditUser_Admin", "Admin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    @Html.HiddenFor(m => m.user.Id)

    <div class="form-group col-xs-5">
        <label>First Name</label>
        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
    </div>
    <div class="form-group col-xs-5">
        <label>Last Name</label>
        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
    </div>

    <div class="form-group col-xs-5">
        @Html.LabelFor(m => m.Email, new { @class = "control-label" })
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
    </div>
    <div class="form-group col-xs-5">
        <label>Role</label>
        @Html.DropDownListFor(m => m.RoleId, Model.AspNetRoles, new { @class = "form-control", style = "width: 115px" })
    </div>
    <div class="row col-lg-12 col-md-12 col-xs-12">
        <div class="form-group col-xs-5">
            @Html.LabelFor(m => m.Password, new { @class = "control-label" })
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
        <div class="form-group col-xs-5" style="margin-left:0px">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="form-group col-lg-10 col-xs-10">
            <input id="submit" type="submit" class="btn btn-primary" onclick="showSubmit()" value="Save" style="margin-left: 15px" />
        </div>
    </div>
}
<div>
    <a>@Html.ActionLink("Return to Users", "Users_Admin", "Admin")</a>
</div>

@section Scripts {
    <script>

    </script>
    @Scripts.Render("~/bundles/jqueryval")
}
