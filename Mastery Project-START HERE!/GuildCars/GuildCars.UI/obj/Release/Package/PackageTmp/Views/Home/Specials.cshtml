@model List<GuildCars.Models.Tables.Special>

@{
    ViewBag.Title = "Specials";
}

<div class="row">
    <div class="col-xs-12">
        <h2>Specials</h2>
        @if (Model.Any())
        {
            foreach (var special in Model)
            {
                <div class="col-lg-12" style="border: solid; margin-bottom: 10px; height:150px">


                    <div class="col-lg-1 col-md-1 col-xs-1" style="margin-right: 50px">
                        <img src="@Url.Content("~/Images/ImageSpecials/" + special.SpecialImageFileName)" style="max-width: 100px; height: auto; margin-top:25px" />
                    </div>

                    <div class="col-lg-9 col-md-7 col-xs-5" style="margin-left:20px; margin-top: 20px">
                        <table>
                            <tbody>
                                <tr>
                                    <td><strong>@special.SpecialTitle</strong></td>
                                </tr>
                                <tr>
                                    <td>@special.SpecialDescription</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            }
        }
        else
        {
            <p>We're working on some really great things right now. Come back again soon!</p>
        }
    </div>
</div>